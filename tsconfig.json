{
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"target": "ES2018",
		"outDir": "out",
		"lib": [
			"es6",
			"dom",
			"dom.iterable"
		],
		"sourceMap": true,
    "strict": true,
    "esModuleInterop": true, // Enable esModuleInterop
    "allowSyntheticDefaultImports": true, // Enable allowSyntheticDefaultImports
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*",
		"client/**/*",
		"global.d.ts"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"dist"
	]
}
